<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{yyyy-MM-dd HH:mm:ss,SSS}[%t][%x][%-5p]%m method:%l%n" />
		</layout>
	</appender>

	<appender name="DRFI" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/export/log/fund_operation/log4j.log" />
		<param name="DatePattern" value=".yyyyMMdd" />
		<param name="Threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{yyyy-MM-dd HH:mm:ss,SSS}[%t][%x][%-5p]%m method:%l%n" />
		</layout>
	</appender>

	<logger name="org.springframework">
		<level value="INFO" />
	</logger>
	<logger name="org.apache.activemq">
		<level value="INFO" />
	</logger>
    <logger name="org.apache.zookeeper">
        <level value="INFO" />
    </logger>
	<logger name="com.wangyin.ssoclient">
		<level value="INFO" />
	</logger>
	<root>
		<!-- <priority value="INFO" /> -->
		<priority value="ERROR" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="DRFI" />
	</root>

</log4j:configuration>